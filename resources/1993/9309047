\def\today{
  \ifcase\month\or January\or February\or March\or
  April\or May\or June\or July\or August\or
  September\or October\or November\or December\fi
  \space\number\day, \number\year}

\def\dateline{\rightline\today}

\def\draft{\rightline{Draft\space\today}}       % "Draft", date

\def\ppt#1{\rightline{\rm UdeM-LPN-TH-#1}}

\def\title{\null\vskip 3pt plus 0.2fill
        \beginlinemode \doublespace \raggedcenter \bf\byg}

\def\author{                    %  Author(s) name(s)  on title page
  \vskip 8pt plus 0.2fill \beginlinemode
  \singlespace \raggedcenter\rm}

\def\affil{                     % Affiliations (can intermix with \author)
  \vskip 3pt plus 0.1fill \beginlinemode
  \oneandathirdspace \raggedcenter \sl}

\def\andaffil{                  %  `and', second (, third, ...) affiliation
  \vskip 2pt \raggedcenter {\rm and} \vskip 2pt \beginlinemode
  \oneandathirdspace \raggedcenter \sl}

\def\osuphy{Department of Physics\\Ohio State University\\
        Columbus, OH 43210}
\def\theosuphy{Department of Physics\\The Ohio State University\\
        Columbus, OH 43210}

\def\lpn{Laboratoire de Physique Nucl\'eaire\\
	Universit\'e de Montr\'eal\\Montr\'eal, Qu\'e H3C 3J7\\
	Canada}

\def\abstract{                   % Begin abstract
  \vskip 3pt plus 0.3fill \beginparmode
  \singlespace}%\noindent ABSTRACT: }

\def\endtopmatter{               % End title page, begin body of paper
  \endpage\body}

