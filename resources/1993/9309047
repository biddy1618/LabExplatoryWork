\def\\{\cr}
\tenpoint
\oneandahalfspace
\overfullrule=0pt       % delete the nasty little black boxes for overfull box

\def\head#1{                    % Head;  NOTE enclose the text in {}
  \goodbreak\bigskip\bigskip    %  e.g., \head{I. Introduction}
  {\immediate\write16{#1}
   \raggedcenter \uppercase{#1}\par}
   \nobreak\bigskip\nobreak}

\def\subhead#1{                 % Subhead;  NOTE enclose the text in {}
  \bigskip                      % e.g., \subhead{A. History of the Problem}
  {\raggedcenter {#1} \par}
   \nobreak\bigskip\nobreak}

\def\beginitems{
\par\medskip\bgroup\def\i##1 {\item{##1}}\def\ii##1 {\itemitem{##1}}
\leftskip=36pt\parskip=0pt}
\def\enditems{\par\egroup}

