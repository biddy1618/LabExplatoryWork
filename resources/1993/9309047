\def\figurecaptions             % Begin figure captions
  {\endpage
   \head{Figure Captions}
   \beginparmode\singlespace
   \parindent=0pt \leftskip=1truecm
   \parskip=4pt plus 3pt \everypar={\hangindent=\parindent}}

\def\endfigurecaptions{\body}

