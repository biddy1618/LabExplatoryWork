\vrule#\cr \tablerule\ilspace
&&v_1&&(-{1\over3},0,0,0,0)&\cr\ilspace
&&v_2&&(-{7\over{18}},-{1\over2},-{1\over3},-{2\over3},
    -{1\over6})&\cr\ilspace
&&v_3&&(-{1\over6},-{1\over2},0,0,-{1\over2})&\cr\ilspace
&&v_4&&(-{2\over9},0,-{1\over3},-{2\over3},-{2\over3})&\cr\ilspace
&&v_5&&(-{1\over9},0,-{2\over3},-{1\over3},-{1\over3})&\cr\ilspace
\tablerule\noalign{\vskip2pt}
