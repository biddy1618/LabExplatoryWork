\vskip-10pt
\noindent{\bf Yang-Baxter equation}
\begin{eq}
&&\sum_l \w(l,l_2,l_3,l_4,\zeta_2/\zeta_3)
\w(l_6,l,l_4,l_5,\zeta_1/\zeta_3)\w(l_1,l_2,l,l_6,\zeta_1/\zeta_2) \n
&&=
\sum_l \w(l,l_3,l_4,l_5,\zeta_1/\zeta_2)
\w(l_1,l_2,l_3,l,\zeta_1/\zeta_3)\w(l_6,l_1,l,l_5,\zeta_2/\zeta_3).
\label{eqn:YBE}
\end{eq}


