\noindent{\bf Crossing symmetry}
\begin{eq}
&&\w(l_4,l_1,l_2,l_3,\zeta^{-1})=\w(l_1,l_2,l_3,l_4,x\zeta)
{g_{l_2}\over g_{l_3}}
\label{eqn:cross}
\end{eq}


