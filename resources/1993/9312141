\catcode`@=11
\newif\ifs@p
\def\jnlitem#1#2#3#4%
  {#1\def\l@st{#1}\ifx\l@st\empty\s@pfalse\else\s@ptrue\fi%
   \def\l@st{#2}\ifx\l@st\empty\else%
   \ifs@p, \fi{\frenchspacing\sl#2}\s@ptrue\fi%
   \def\l@st{#3}\ifx\l@st\empty\else\ifs@p, \fi{\bf#3}\s@ptrue\fi%
   \def\l@st{#4}\ifx\l@st\empty\else\ifs@p, \fi#4\s@ptrue\fi%
   \ifs@p.\fi\par}
\def\bkitem#1#2#3%
  {#1\def\l@st{#1}\ifx\l@st\empty\s@pfalse\else\s@ptrue\fi%
   \def\l@st{#2}\ifx\l@st\empty\else%
   \ifs@p, \fi{\frenchspacing\sl#2}\s@ptrue\fi%
   \def\l@st{#3}\ifx\l@st\empty\else\ifs@p, \fi#3\s@ptrue\fi%
   \ifs@p.\fi\par}
