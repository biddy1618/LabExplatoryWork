\multiput(160,645)(0.40000,-0.40000){26}{\makebox(0.4444,0.6667){\sevrm .}}
\put(170,635){\line( 1, 0){ 15}}
\multiput(200,675)(0.40000,-0.40000){26}{\makebox(0.4444,0.6667){\sevrm .}}
\put(210,665){\line( 0,-1){ 20}}
\multiput(210,645)(-0.40000,-0.40000){26}{\makebox(0.4444,0.6667){\sevrm .}}
