\multiput(105,675)(-0.40000,-0.40000){26}{\makebox(0.4444,0.6667){\sevrm .}}
\put( 95,665){\line( 0,-1){ 20}}
\multiput( 95,645)(0.40000,-0.40000){26}{\makebox(0.4444,0.6667){\sevrm .}}
\put(105,635){\line( 1, 0){ 15}}
\multiput(135,675)(0.40000,-0.40000){26}{\makebox(0.4444,0.6667){\sevrm .}}
\put(145,665){\line( 0,-1){ 20}}
\multiput(145,645)(-0.40000,-0.40000){26}{\makebox(0.4444,0.6667){\sevrm .}}
