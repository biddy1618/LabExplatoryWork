\vskip.2truein
\line{
\vtop{\baselineskip=11pt\hsize = 2.0truein
\centerline{$^4$\it Institut de Physique\qquad}
\centerline{\it Universit\'e\:\ de\:\ Neuch\^atel\qquad}
\centerline{\it CH-2000 Neuch\^atel\qquad}
\centerline{\it Switzerland\qquad}}\hfill
