 \place{3.21}{-.7}{$\Big\uparrow$}
 \place{2}{-1.1}{the only double pole}
 \place{4.6}{-.275}{$\odot$} \place{4.75}{-.5}{$0$}
 \place{6.0}{-.275}{$\odot$} \place{5.95}{-.5}{$+1$}
  %
