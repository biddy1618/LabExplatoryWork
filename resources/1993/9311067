\loop\ifnum\indcount<\fdefcount    \advance\indcount by 1
\immediate\read\fileftmp to\spezttrra
\edef\spzzttrra{\expandafter\strip\spezttrra}
\immediate\write\filefdef{\spzzttrra *.A}
