  \scriptscriptfont\msbmfam=\fivemsbm \def\msbm{\fam\msbmfam\ninemsbm}
     \fi       \ifnum\contacyrill=1     \def\cyrill{\ninewncyr}
  \def\cyrilb{\ninewncyb}  \def\cyrili{\ninewncyi}         \fi
