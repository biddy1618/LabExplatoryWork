\put(90.,28.){\makebox(0,0)[lc]{$\equiv q^{(n+1)/2-\alpha}$,}}
\put(15.,17.50){\oval(20.,35.)[t]}
\put(45.,28.){\makebox(0,0)[cc]{or}}
\put(5.,10.){\makebox(0,0)[cc]{$\s \alpha$}}
\put(65.,25.){\vector(0,1){10.}}
\put(230.,25.){\oval(20.,20.)[b]}
\put(175.,17.50){\oval(20.,35.)[t]}
\put(200.,28.){\makebox(0,0)[cc]{or}}
\put(220.,35.){\vector(0,-1){5.}}
\put(220.,25.){\line(0,1){5.}}
\put(240.,25.){\vector(0,1){10.}}
\put(245.,28.){\makebox(0,0)[lc]{$\equiv q^{\alpha-(n+1)/2} $}}
