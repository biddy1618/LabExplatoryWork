\put(55.,15.){\makebox(0,0)[cc]{$\s y$}}
\put(115.,30.){\oval(20.,20.)[l]}
\put(115.,60.){\oval(20.,20.)[l]}
\put(115.,40.){\line(1,0){25.}}
\put(115.,70.){\line(1,0){25.}}
\put(115.,50.){\line(1,0){25.}}
\put(115.,20.){\line(1,0){25.}}
\put(85.,45.){\makebox(0,0)[cc]{$=$}}
\put(0.,60.){\makebox(0,0)[cc]{-}}
\put(0.,30.){\makebox(0,0)[cc]{-}}
\put(105.,60.){\makebox(0,0)[cc]{-}}
