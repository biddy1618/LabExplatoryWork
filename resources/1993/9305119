\def\address#1{{\parindent=\secindent 
    \exhyphenpenalty=10000\hyphenpenalty=10000 
\ifppt\textfonts\else\smallfonts\fi\hang\raggedright\rm#1\par}% 
    \ifppt\bigskip\fi} 
