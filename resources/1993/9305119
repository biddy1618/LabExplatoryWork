% Definition for slashed characters 
% 
\def\slashchar#1{\setbox0=\hbox{$#1$}\dimen0=\wd0% 
\setbox1=\hbox{/}\dimen1=\wd1% 
\ifdim\dimen0>\dimen1%                         
\rlap{\hbox to \dimen0{\hfil/\hfil}}#1\else                                         
\rlap{\hbox to \dimen1{\hfil$#1$\hfil}}/\fi} 
