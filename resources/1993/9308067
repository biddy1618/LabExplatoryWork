\let\lasttitle=N\line{{\textfont1=\tams
\scriptfont1=\tamss\scriptscriptfont1=\tbmss\bf#1}%
\if!#2!\hfill\else\leaderfill\hbox to\thousand{\hss#2}\fi}\par}
