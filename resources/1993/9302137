   \vskip\chapterskip\spacecheck\referenceminspace
   \iftableopen \Closeout\tablewrite \tableopenfalse \fi
   \line{\ifpr@printstyle\twelverm\else\fourteenrm\fi\hfil TABLE CAPTIONS\hfil}
   \vskip\headskip
   \input \jobname.tabs
   }
