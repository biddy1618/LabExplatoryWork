% \medskip\noindent\hskip\spskip}
%
\def\UWHEAD{\setbox0=\vbox{\baselineskip=12pt
      \ialign{\tenfib ##\hfil\cr
         {\tenbf Department of Physics}\cr
         1150 University Avenue\cr
         Madison, Wisconsin 53706\cr
         High Energy Physics Office:\cr
         4288 Chamberlin Hall\cr
         Telephone: 608-262-2281\cr}}
   \smallskip \line{\hskip 0.5\hsize minus 0.5\hsize\box0\hfill}\bigskip}
