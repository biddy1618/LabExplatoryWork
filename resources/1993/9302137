   \spacecheck\referenceminspace
   \ifreferenceopen \Closeout\referencewrite \referenceopenfalse \fi
   \line{\ifpr@printstyle\twelverm\else\fourteenrm\fi
         \hfil REFERENCES\hfil}\vskip\headskip
   \input \jobname.refs
   }
