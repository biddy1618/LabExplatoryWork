%\input app1
\def\Ut{U_q\bigl(\widehat{\goth{sl}}(2)\bigr)}
\def\Ug{U_q(\goth{g})}
\def\V#1{V(\L_#1)}
\def\L{\Lambda}
\def\l{\lambda}
\def\e{\varepsilon}
\def\p{\varphi}
\def\N{{\bf N}}
\def\Gu{G^{\scriptstyle up}}
