        \ifnum\yco>-240
        \repeat
        \put(\xco,\yco){$\kbl$}}
        \xco=158
        \yco=12
        \put(\xco,\yco){$\ktr$}
        \advance\yco by-1
        {\loop
        \put(\xco,\yco){$\kcr$}
        \advance\yco by-2
        \ifnum\yco>-240
        \repeat
        \put(\xco,\yco){$\kbr$}}
