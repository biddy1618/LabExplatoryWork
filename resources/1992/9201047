\def\SDUAL{\rrr\SDUAL{A. Font, L.E. Ib\'a\~nez, D. L\"ust and F. Quevedo,
\plt249 (1990) 35.}}

\def\HIGGS{\rrr\HIGGS{I. Antoniadis, C. Bachas, C. Kounnas, \plt200
