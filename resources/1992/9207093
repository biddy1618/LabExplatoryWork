%\def\MEMOT{\letterstyle\FRONTPAGE \MADAFHEAD\letterfrontheadline={\hfil}
%    \line{\quad\fourteenss MEMORANDUM\hfil\twelvess\the\date\quad}
%    \medskip \memod@f}
