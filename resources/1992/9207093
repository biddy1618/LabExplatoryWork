\def\half{{\textstyle{1\over2}}}
\def\third{{\textstyle{1\over3}}}
\def\fourth{{\textstyle{1\over4}}}
\def\12{{1\over2}}
\def\etal{{\it et al.\ }}
\def\via{{\hbox{\it via}}}
