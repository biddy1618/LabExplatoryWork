\def\phyzzx{PHY\setbox0=\hbox{Z}\copy0 \kern-0.5\wd0 \box0 X}
\def\fmtname{phyzzx}        \def\fmtversion{0.94}
\everyjob{\xdef\today{\monthname~\number\day, \number\year}
        \input myphyx.tex }
