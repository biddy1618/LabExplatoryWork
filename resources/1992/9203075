%file uartopt.sty
%
% UARTOPT  (style option file, as extension of the ARTICLE style)
%
% - creates an empty titlepage an starts page numbering with 1 on the first
%   `real' page
%
% new commands and options :
%
%   \eqnumpersection : creates section wise equation numbers
%   ? \normaleqnum     : restores the normal equation numbering
%   \testversion     : creates a pagenumbering at the bottom of the page,
%                      including the actual date
%
% new pagestyle :
%
%   myfootings : same as `myheadings', but for bottomlines
%                (cf. LaTeX-Manual p.161ff)
%
% new environment :
%
%   eqnlist : like `eqnarray', but with its own counter, which is reset before
%             each call, and with roman numbers (defined via \theeqnlist) in
%             front of each formula
%
%
% usage :
%
%  \documentstyle[??pt,uartopt]{article}
%
%
\typeout{Article option style UARTOPT  -  Version 1.0 <4 Dec 91>}

%
% the new title page
%
\def\maketitle{
  \par
  \begingroup
    \def\thefootnote{\fnsymbol{footnote}}
    \def\@makefnmark{\hbox to 0pt{$^{\@thefnmark}$\hss}}
    \if@twocolumn
      \twocolumn[\@maketitle]
    \else
      \newpage
      \global\@topnum\z@
      \@maketitle
    \fi
    \thispagestyle{empty}                                           % changed
    \@thanks
  \endgroup
  \setcounter{footnote}{0}
  \setcounter{page}{0}                                              % new
  \let\maketitle\relax
  \let\@maketitle\relax
  \gdef\@thanks{}
  \gdef\@author{}
  \gdef\@title{}
  \let\thanks\relax }

%
% allow also `myfootings' (cf. `myheadings' in the LaTeX-Manual)
%
\def\ps@myfootings{
  \def\@oddfoot{\hbox{}\sl\rightmark \hfil\rm\thepage}
  \def\@evenfoot{\rm \thepage\hfil\sl\leftmark\hbox{}}
  \def\@oddhead{}
  \def\@evenhead{}
  \def\sectionmark##1{}
  \def\subsectionmark##1{} }


