% ~\number\day.\number\month.\number\year
%  \pagestyle{myfootings} }
%
% does not work this way, so
%
\def\testversion{
  \markboth{Version ~\number\day.\number\month.\number\year}
           {Version ~\number\day.\number\month.\number\year}
  \pagestyle{myfootings} }


