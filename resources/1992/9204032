\def\tfd {{\delta \tilde f_3}}
\def\tfx {{\delta \tilde \Phi}}
\def\mr {{\left (1-{M\over r}\right )}}
\def\qr {{\left (1-{Q^2\over Mr}\right )}}
\def\qm {{\left (1-{Q^2\over M^2}\right )}}
\def\htdz {{\delta H_{320}+{Q\over r^2}\chi_3}}
