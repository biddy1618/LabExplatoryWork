     \global\advance\equanumber by 1
 \xdef#1{{\noexpand\rm(\number-\equanumber#2)}}\global\advance\equanumber by -1
    \else \xdef#1{{\noexpand\rm(\chapterlabel \number\equanumber#2)}}\fi}
