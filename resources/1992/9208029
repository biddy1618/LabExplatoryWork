 \hskip .1truecm ^{-1}(0,{1\over 2},{1\over 2})^1_0$      &
 $({1\over 2},{1\over 2})^2_0\oplus (0,1)^{0}_0\oplus (0,0)^{0}_0$ \\
$A$ &   $^.(0,0,0)^0_1$  &   $(0,0)^._1$\\
$c$ &    $^.(0,0,0)^1_0$ &    $(0,0)^._0$
\end{tabular}
\label{twist}
\end{table}

