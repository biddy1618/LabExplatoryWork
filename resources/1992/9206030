  \def\r{\hfil$\the\hashtoks@$}%
  \def\l{$\the\hashtoks@$\hfil}%
  \setbox\z@=\hbox{\xdef\Preamble@{\preamble@}}\ifnum`{=0 \fi\iffalse}\fi
   \ialign\bgroup\span\Preamble@\crcr}
