   \ifhmode\allowbreak\else\nonhmodeerr@\allowlinebreak\fi}
\newskip\saveskip@
\def\nolinebreak{\relax\ifhmode\saveskip@=\lastskip\unskip
  \nobreak\ifdim\saveskip@>\z@\hskip\saveskip@\fi
   \else\nonhmodeerr@\nolinebreak\fi}
