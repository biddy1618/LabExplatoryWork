\def\getfigure#1{\global\advance\figurecount by 1
   \xdef#1{\the\figurecount}\count255=\escapechar \escapechar=-1
   \edef\n@xt{\noexpand\g@tfigure\csname\string#1Body\endcsname}%
   \escapechar=\count255 \n@xt }
