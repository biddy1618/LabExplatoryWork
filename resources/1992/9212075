   \count255=\escapechar \escapechar=-1
   \edef\n@xt{\csname\string#1Body\endcsname}
   \escapechar=\count255 \centerline{\n@xt}
   \bigskip\narrower\narrower
   \noindent{\it Figure}~#1.\quad }
