\def\qr {{\left (1-{Q_a^2\over Mr}\right )}}
\def\qm {{\left (1-{Q^2\over M^2}\right )}}
\def\htdz {{\delta H_{320}+{Q\over r^2}\chi_3}}
\def\derp {{\partial_+}}
\def\derm {{\partial_-}}
\def\dr {{\partial_{r^*}}}
\def\ddr {{\partial^2_{r^*}}}
