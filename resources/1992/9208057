\put ( 98,50){\line( 1, 0){24}}
\put (138,50){\line( 1, 0){24}}
\put (178,50){\line( 1, 0){24}}
\put (218,50){\line( 1, 0){24}}
\put (130,58){\line( 0, 1){24}}
